{
  "name": "pixelstars-casino-bot",
  "version": "2.0.0",
  "description": "🌟 Telegram Web App Casino с краш игрой 24/7, системой звезд и Vercel деплоем",
  "type": "module",
  "main": "api/bot.py",
  "homepage": "https://github.com/makarinkoder-ctrl/PixelStars",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makarinkoder-ctrl/PixelStars.git"
  },
  "bugs": {
    "url": "https://github.com/makarinkoder-ctrl/PixelStars/issues"
  },
  "scripts": {
    "start": "python bot_server.py",
    "dev": "python bot_server.py",
    "dev:web": "python -m http.server 8200 --directory web",
    "dev:bot": "python bot_server.py",
    "build": "echo 'Статический проект, сборка не требуется'",
    "test": "python -m pytest tests/ -v",
    "test:bot": "python test_bot.py",
    "deploy": "vercel --prod",
    "setup:webhook": "./setup-webhook.sh",
    "check:env": "python -c 'import os; print(\"BOT_TOKEN:\", \"✅\" if os.getenv(\"BOT_TOKEN\") else \"❌\")'",
    "install:python": "pip install -r requirements.txt",
    "install:venv": "python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "clean": "rm -rf __pycache__ .pytest_cache *.pyc",
    "format": "black . && isort .",
    "lint": "flake8 . && mypy .",
    "docs": "echo 'Документация доступна в README.md и CONTRIBUTING.md'"
  },
  "keywords": [
    "telegram",
    "bot",
    "casino",
    "crash-game",
    "web-app",
    "vercel",
    "python",
    "flask",
    "gambling",
    "stars",
    "pixelstars",
    "24/7",
    "auto-withdraw",
    "mobile",
    "serverless"
  ],
  "author": {
    "name": "PixelStars Team",
    "url": "https://github.com/makarinkoder-ctrl"
  },
  "contributors": [
    {
      "name": "makarinkoder-ctrl",
